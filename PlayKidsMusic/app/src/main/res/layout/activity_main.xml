<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@color/colorPrincipal">
    <TextView
            android:text="@string/DefaultText"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:layout_marginBottom="250dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="22dp" android:id="@+id/textView" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="play"
            android:text="@string/btnPlay"
            android:background="@color/colorBtnPlay"
            android:textColor="@color/colorTextBtns" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="207dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pause"
            android:text="@string/btnPause"
            android:background="@color/colorBtnPuse"
            android:textColor="@color/colorTextBtns" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="146dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stop"
            android:text="@string/btnStop"
            android:background="@color/colorBtnStop"
            android:textColor="@color/colorTextBtns" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="89dp"/>
    <!-- Aqui vou colocar meu ProgressBar-->
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="471dp" android:layout_marginStart="0dp"
            />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="399dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:layout_alignParentTop="true" android:id="@+id/imageView4"
            android:layout_marginTop="0dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            tools:ignore="VectorDrawableCompat"/>
        <!--android:android.defaultConfig.vectorDrawables.useSupportLibrary = "true"-->



</RelativeLayout>
